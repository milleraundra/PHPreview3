<!-- stylists clients -->
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Urbaca Salon</title>
    </head>
    <body>
        <div class="container">
<!--Header-->
            <div class="page-header">
                <h1>Urbaca Salon</h1>
            </div>
            {% if stylists is not empty %}
                {% for stylist in stylists %}
                <h3><a href="/stylist/{{ stylist.getId }}">{{ stylist.getName }}</a></h3>
                    {% for client in clients %}
                    <ul>
                        {% if client.getStylistId == stylist.getId %}
                        <li><a href="/client/{{ client.getId }}">{{ client.getClient }}</a></li>
                        {% endif %}
                    </ul>
                    {% endfor %}
                {% endfor %}

            {% endif %}
        </div>
    </body>
</html>
