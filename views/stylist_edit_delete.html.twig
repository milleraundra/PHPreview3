<!-- *stylist -->
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Urbaca Salon</title>
    </head>
    <body>
        <div class="container">
<!--Header-->
            <div class="page-header">
                <h1>Urbaca Salon</h1>
            </div>
            <div class="row">
<!-- Edit Stylist Info-->
                <div class="col-md-6">
                    <h2>Update Info for {{ stylist.getName }}</h2>
                    <form class="" action="/stylist/update/{{ stylist.getId }}" method="post">
                        <input name="_method" type="hidden" value="patch">
                        <label for="name">Full Name:</label>
                        <input type="text" name="name" value="{{ stylist.getName }}">
                        <label for="services">Services:</label>
                        <input type="text" name="services" value="{{ stylist.getServices }}">
                        <label for="phone">Phone Contact:</label>
                        <input type="number" name="phone" value="{{ stylist.getPhone }}">
                        <button type="submit" name="button">Edit Stylist Info</button>
                    </form>
                </div>
                <br>
<!-- Delete Stylist -->
                <div class="col-md-6">
                    <form class="" action="/stylist/delete/{{ stylist.getId }}" method="post">
                        <input name="_method" type="hidden" value="delete">
                        <button type="submit" name="button">Delete Stylist</button>
                    </form>
<!--Back Button -->
                    <form class="" action="/stylist/{{ stylist.getId }}" method="get">
                        <button type="submit">Back</button>
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>
