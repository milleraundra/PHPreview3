<!-- *stylist *clients -->
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Urbaca Salon</title>
    </head>
    <body>
        <div class="container">
<!--Header-->
            <div class="page-header">
                <h1>Urbaca Salon</h1>
            </div>
            <h2>{{ stylist.getName }}</h2>
            <h4>Clients:</h4>
            {% if clients is not empty %}
                <ul>
                    {% for client in clients %}
                        <li><a href="#">{{ client.getClient }}</a></li>
                    {% endfor %}
                </ul>
            {% else %}
                <p>This stylist does not have any clients yet.</p>
            {% endif %}

            <form class="" action="/" method="get">
                <button type="submit">Home</button>
            </form>
        </div>
    </body>
</html>
